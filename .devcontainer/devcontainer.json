{
	"name": "cspuz_core dev",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat"
			]
		}
	},
	"mounts": [
		"source=${localWorkspaceFolderBasename}-build-target,target=${containerWorkspaceFolder}/target,type=volume"
	],
	"postCreateCommand": "sudo chown -R vscode:vscode ${containerWorkspaceFolder}/target"
}
